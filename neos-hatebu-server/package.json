{
  "name": "neos-hatebu-server",
  "description": "Neo's Hatebu Server",
  "private": true,
  "scripts": {
    "//": "echo 'Production'",
    "//": "echo '------------------------------------------------------------'",
    "prebuild": "rimraf ./dist",
    "build"   : "nest build",
    "start"   : "node ./dist/main.js",
    
    "//": "echo 'Development",
    "//": "echo '------------------------------------------------------------'",
    "dev"                 : "nest start --watch",
    "lint"                : "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint"         : "eslint \"./src/**/*.ts\"",
    "lint:prettier"       : "prettier --list-different \"./src/**/*.ts\"",
    "lint:check-conflicts": "eslint-config-prettier \"./src/**/*.ts\"",
    
    "//": "echo 'Dependencies And DevDependencies Commands'",
    "//": "echo '------------------------------------------------------------'",
    "nest"                  : "nest",
    "rimraf"                : "rimraf",
    "eslint"                : "exlint",
    "eslint-config-prettier": "eslint-config-prettier",
    "prettier"              : "prettier",
    "ts-node"               : "ts-node",
    "ts-node-cwd"           : "ts-node-cwd",
    "ts-node-esm"           : "ts-node-esm",
    "tsc"                   : "tsc"
  },
  "dependencies": {
    "@nestjs/common": "9.0.11",
    "@nestjs/core": "9.0.11",
    "@nestjs/platform-express": "9.0.11",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.6"
  },
  "devDependencies": {
    "@nestjs/cli": "9.1.1",
    "@nestjs/schematics": "9.0.1",
    "@types/express": "4.17.13",
    "@types/node": "16.11.56",
    "@typescript-eslint/eslint-plugin": "5.36.0",
    "@typescript-eslint/parser": "5.36.0",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "prettier": "2.7.1",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.8.2"
  }
}
